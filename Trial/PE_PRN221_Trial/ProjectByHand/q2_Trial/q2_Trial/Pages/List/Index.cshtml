@page
@model q2_Trial.Pages.List.IndexModel
@{
}
<h1>Services Manager</h1>
<form method="get">
    <div class="d-flex">
        <p class="me-5S">Room</p>
        <input type="Text"  value="@Model.Room" name="room" />
    </div>
    <div>
        <button type="submit" class="btn btn-secondary" >Search</button>
    </div>
</form>

<h3>List of Services @Model.Services.Count</h3>

<form method="post" enctype="multipart/form-data">
    <div class="d-flex">
        <input type="file" name="inputfile" />
        <button type="submit" class="btn btn-secondary">Import</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Room Title</th>
            <th>Feetype</th>
            <th>Month</th>
            <th>Year</th>
            <th>Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var service in Model.Services)
        {
       <tr>
                <td>@service.RoomTitle</td>
                <td>@service.FeeType</td>
                <td>@service.Month</td>
                <td>@service.Year</td>
                <td>@service.Amount</td>
                @if (@service.Employee == null)
                {
                    <td>Unpaid</td>
                }
                else
                {
                    <td>Paid: @service.EmployeeNavigation.Name</td>
                }

       </tr>
       }
    </tbody>
</table>
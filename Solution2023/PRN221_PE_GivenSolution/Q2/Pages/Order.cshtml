@page
@model Q2.Pages.OrderModel
@{
}
<h1>Q1 List Order</h1>
<table>
    <thead>
        <tr>
            <th>OrderId</th>
            <th>Customer</th>
            <th>Employee</th>
            <th>OrderDate</th>
            <th>RequiredDate</th>
            <th>ShippAddress</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in (List<Order>)ViewData["orders"])
        {
                <tr>
                    <td>@o.OrderId</td>
                    <td>@o.Customer.CompanyName</td>
                    <td>@o.Employee.FirstName @o.Employee.LastName</td>
                    <td>@Html.DisplayFor(modelItem => o.OrderDate)</td>
                    <td>@Html.DisplayFor(modelItem => o.RequiredDate)</td>
                    <td>@Html.DisplayFor(modelItem => o.ShipAddress)</td>

                    <td>
                        <a asp-page-handler="delete" asp-route-id="@o.OrderId">Delete</a>
                    </td>

                </tr>
        }

    </tbody>
</table>